<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_Fragment_Displayer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/sfdlikebutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/favgrey"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/bungee"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/sfdname"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdpincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="pincode"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="city name"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No. :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="phone number"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email-ID :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="Email-ID"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:fontFamily="@font/bungee"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="type"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdroomtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="option"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Per Month :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdrentpermonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="100000"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facilities in Vicinity :"
            android:fontFamily="@font/bungee"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/sfdfacilitiesinvicinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="facilities"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Availability :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdfoodavail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="yes"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Furnishment :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdfurnishment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="option"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC Availability :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/sfdacavail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="option"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>