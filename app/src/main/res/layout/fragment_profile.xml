<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pglogo"
            android:id="@+id/profileimage"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Full Name"
            android:layout_toRightOf="@+id/profileimage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profileusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilename"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profileimage"
            android:fontFamily="@font/arbutus_slab"
            android:includeFontPadding="false"
            android:text="UserName"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mobile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/profilemobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bungee"
                    android:text="1234567890"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profilemobilenodescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilemobileno"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/arbutus_slab"
                    android:includeFontPadding="false"
                    android:text="Mobile No."
                    android:textSize="14sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mail"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/profileemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bungee"
                    android:text="anthonygonsal12@gmail.com"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/profilemaildescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileemail"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/arbutus_slab"
                    android:includeFontPadding="false"
                    android:text="E-Mail"
                    android:textSize="14sp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/profileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="00"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/profilesex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="gender"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proffession :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/profileproffession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="working status"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/partiallayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proffession Details"
            android:fontFamily="@font/bungee"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/profileproffessionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:paddingBottom="10dp"
                android:text="college/company name"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/profileproffessionaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:paddingBottom="10dp"
                android:text="college/company add"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hometown\n Address :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/profilehometownaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arbutus_slab"
                android:paddingBottom="10dp"
                android:text="b1,703,anand krupa towe,hajuri road,behind L.I.C BILDING, THANE, MAHARASHTRA."
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>