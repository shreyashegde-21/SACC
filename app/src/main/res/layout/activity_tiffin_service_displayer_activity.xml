<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/gallery"
            android:scaleType="centerCrop"/>

        <TextView
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tiffinservicename"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No. :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/tsphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="phone no."
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/tslocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="city"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/tsaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="adress"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Type :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/tsfoodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="foodtype"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/tsdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="description of tiffin service"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/tsprices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="prices"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Info. :"
                android:fontFamily="@font/bungee"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/tsadditiveinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="additional info about the tiffin services."
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>